portal = """
<main class="portalWrap">
  <div class="container">
    <div class="portalGrid">
      <aside class="card sidebar">
        <h3>Área do Cliente</h3>
        <p class="muted">Acesso a modelos, documentação e informações do projeto.</p>
        <div class="notice" style="margin-bottom:12px;">Viewer embutido via iframe. Modelo padrão em <b>assets/models/Projeto_Objeto3D_Chat.ifc</b>.</div>
        <div class="menu">
          <a href="./portal.html">Dashboard</a>
          <a href="./viewer.html" target="_blank" rel="noopener">Abrir Viewer (nova aba)</a>
          <a href="./assets/models/Projeto_Objeto3D_Chat.ifc" download>Download IFC</a>
        </div>
        <div class="hr"></div>
        <button id="logoutBtn" class="btn" type="button" style="width:100%;">Sair</button>
      </aside>

      <section class="card viewerCard">
        <iframe class="viewerFrame" src="./viewer.html" title="Heliroma IFC Viewer"></iframe>
      </section>
    </div>
  </div>
</main>
"""

def main():
    if not VIEWER_INDEX.exists():
        raise SystemExit("ERRO: não encontrei o seu index.html do viewer na pasta atual.")

    if OUT.exists():
        shutil.rmtree(OUT)
    OUT.mkdir(parents=True, exist_ok=True)

    write(CSS / "site.css", site_css)
    write(JS / "site.js", site_js)
    write(OUT / "index.html", wrap("Heliroma — Website", home))
    write(OUT / "login.html", wrap("Heliroma — Login", login, "login"))
    write(OUT / "portal.html", wrap("Heliroma — Portal do Cliente", portal, "portal"))

    viewer_html = VIEWER_INDEX.read_text(encoding="utf-8")

    # Patch do DEFAULT_IFC_URL para apontar para assets/models
    viewer_html = re.sub(
        r'const\\s+DEFAULT_IFC_URL\\s*=\\s*[\"\\\']\\.\\/Projeto_Objeto3D_Chat\\.ifc[\"\\\']\\s*;',
        'const DEFAULT_IFC_URL = "./assets/models/Projeto_Objeto3D_Chat.ifc";',
        viewer_html
    )
    # fallback: se não achar exatamente a linha, tenta replace simples
    viewer_html = viewer_html.replace("./Projeto_Objeto3D_Chat.ifc", "./assets/models/Projeto_Objeto3D_Chat.ifc")

    write(OUT / "viewer.html", viewer_html)

    # Copiar IFC
    if IFC_FILE.exists():
        MODELS.mkdir(parents=True, exist_ok=True)
        shutil.copy2(IFC_FILE, MODELS / IFC_FILE.name)
    else:
        print("AVISO: não encontrei Projeto_Objeto3D_Chat.ifc. Copie manualmente para heliroma_site/assets/models/")

    # ZIP
    zip_path = REPO / "heliroma_website_demo.zip"
    if zip_path.exists():
        zip_path.unlink()
    with zipfile.ZipFile(zip_path, "w", compression=zipfile.ZIP_DEFLATED) as z:
        for p in OUT.rglob("*"):
            z.write(p, p.relative_to(OUT))

    print("OK:", zip_path)

if __name__ == "__main__":
    main()
