import shutil, zipfile, re
from pathlib import Path

REPO = Path(".").resolve()
VIEWER_INDEX = REPO / "index.html"  # seu viewer atual
IFC_FILE = REPO / "Projeto_Objeto3D_Chat.ifc"

OUT = REPO / "heliroma_site"
ASSETS = OUT / "assets"
CSS = ASSETS / "css"
JS = ASSETS / "js"
MODELS = ASSETS / "models"

def write(p: Path, s: str):
    p.parent.mkdir(parents=True, exist_ok=True)
    p.write_text(s, encoding="utf-8")

