site_js = r"""(function(){
  const AUTH_KEY = "heliroma_demo_auth";
  function isAuthed(){ try{ return localStorage.getItem(AUTH_KEY)==="1"; }catch(_){ return false; } }
  function setAuthed(v){ try{ localStorage.setItem(AUTH_KEY, v ? "1":"0"); }catch(_){ } }

  if (document.body.dataset.page === "portal"){
    if (!isAuthed()){ window.location.href="./login.html"; return; }
    const btn = document.getElementById("logoutBtn");
    if (btn) btn.addEventListener("click", ()=>{ setAuthed(false); window.location.href="./index.html"; });
  }

  if (document.body.dataset.page === "login"){
    const form = document.getElementById("loginForm");
    const err = document.getElementById("loginError");
    const demo = document.getElementById("demoFill");
    const redirect = ()=> window.location.href="./portal.html";
    if (isAuthed()) redirect();

    if (demo) demo.addEventListener("click", ()=>{
      document.getElementById("email").value="cliente@heliroma.com";
      document.getElementById("password").value="demo";
    });

    if (form) form.addEventListener("submit", (e)=>{
      e.preventDefault();
      err.style.display="none";
      const email = document.getElementById("email").value.trim();
      const pwd = document.getElementById("password").value;
      if (!email || !pwd){ err.textContent="Por favor, preencha email e password."; err.style.display="block"; return; }
      if (pwd.length < 3){ err.textContent="Password inválida."; err.style.display="block"; return; }
      setAuthed(true);
      redirect();
    });
  }
})();"""

def wrap(title, body, page=""):
    return f"""<!doctype html>
<html lang="pt" translate="no" class="notranslate">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
  <meta name="google" content="notranslate" />
  <title>{title}</title>
  <link rel="stylesheet" href="./assets/css/site.css" />
</head>
<body data-page="{page}">
  <div class="nav">
    <div class="container">
      <div class="navbar">
        <a class="brand" href="./index.html" aria-label="Heliroma home">
          <span class="badge" aria-hidden="true"></span><span>Heliroma</span>
        </a>
        <div class="navlinks" role="navigation" aria-label="Primary">
          <a href="./index.html#servicos">Serviços</a>
          <a href="./index.html#solucoes">Soluções</a>
          <a href="./index.html#contato">Contato</a>
          <a class="btn small primary" href="./login.html">Área do Cliente</a>
        </div>
      </div>
    </div>
  </div>

  {body}

  <div class="footer">
    <div class="container">
      <div class="footerGrid">
        <div>© 2026 Heliroma — All rights reserved.</div>
        <div>info@heliroma.com • Portugal</div>
      </div>
    </div>
  </div>

  <script src="./assets/js/site.js"></script>
</body>
</html>
"""

